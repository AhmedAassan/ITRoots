@model ITRoots.BL.Models.ProductVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header">
						<div class="row">
							<div class="col-md-6 col-sm-12">
								<div class="title text-end">
									<h4>New Product</h4>
								</div>
								<nav aria-label="breadcrumb" role="navigation">
									<ol class="breadcrumb">
										<li class="breadcrumb-item">
											<a asp-controller="Home" asp-action="Index">Home</a>
										</li>
										<li class="breadcrumb-item active" aria-current="page">
											  Product Detail
										</li>
									</ol>
								</nav>
							</div>
							<div class="col-md-6 col-sm-12 text-right">
								<div class="dropdown">
									<a
										class="btn btn-warning"
										asp-controller="Product" asp-action="Index"
									>
										Back
									</a>
									
								</div>
							</div>
						</div>
					</div>

<form asp-controller="Product" asp-action="Details" >
							<div class="form-group row">
								<label class="col-sm-12 col-md-2 col-form-label">Name</label>
								<div class="col-sm-12 col-md-10">
									<input
										class="form-control"
										type="text"
										placeholder="Enter ur Name"
										asp-for="Name"
										disabled
									/>
									
								</div>
							</div>
							
							<div class="form-group row">
								<label class="col-sm-12 col-md-2 col-form-label">Quantity</label>
								<div class="col-sm-12 col-md-10">
									<input
										class="form-control"
										type="text"
										placeholder="Enter Quantity"
										asp-for="Quantity"
										disabled
									/>
									
								</div>
							</div>

							<div class="form-group row">
								<label class="col-sm-12 col-md-2 col-form-label">Price</label>
								<div class="col-sm-12 col-md-10">
									<input
										class="form-control"
										type="text"
										placeholder="Enter Price"
										asp-for="Price"
										disabled
									/>
									
								</div>
							</div>
								

							<center>
								<button asp-controller="Product" asp-action="Index">Back</button>
								
							</center>
						</form>

